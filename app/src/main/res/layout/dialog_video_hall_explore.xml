<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/card_layout"
        android:layout_width="304dp"
        android:layout_height="407dp"
        android:background="@drawable/bg_popup"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_video_hall_explore_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:lineSpacingExtra="6sp"
            android:textColor="#80581f"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_video_hall_explore_author"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="欢迎你！\n\n这里是国民老婆放映厅。\n\n向日系老婆投降吧，是她？是她？还是\n她？请随意挑选。" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:src="@drawable/img_seal"
            app:layout_constraintBottom_toTopOf="@+id/tv_video_hall_explore"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView

            android:id="@+id/tv_video_hall_explore_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:gravity="end"
            android:lineSpacingExtra="6sp"
            android:textColor="#592f0a"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_video_hall_explore"
            tools:text="鸟站放映员" />

        <TextView
            android:id="@+id/tv_video_hall_explore"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_btn_black_radius_22"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2sp"
            android:text="@string/str_video_hall_start_explore"
            android:textColor="#ffde85"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_video_hall_explore_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:src="@drawable/ic_close1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_layout" />

</android.support.constraint.ConstraintLayout>
