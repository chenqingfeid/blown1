<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="9dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/mItemPartitionTopicCoverView"
        android:layout_width="155dp"
        android:layout_height="97dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="4dp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/mItemPartitionTopicCoverView"
        app:layout_constraintStart_toStartOf="@+id/mItemPartitionTopicCoverView"
        app:layout_constraintTop_toBottomOf="@+id/mItemPartitionTopicCoverView"
        app:srcCompat="@drawable/icon_topic_collapse" />

    <View
        android:id="@+id/mItemPartitionTopicCoverShadowView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_topic_top_shadow"
        app:layout_constraintBottom_toBottomOf="@+id/mItemPartitionTopicCoverView"
        app:layout_constraintEnd_toEndOf="@+id/mItemPartitionTopicCoverView"
        app:layout_constraintStart_toStartOf="@+id/mItemPartitionTopicCoverView"
        app:layout_constraintTop_toTopOf="@+id/mItemPartitionTopicCoverView" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mItemPartitionTopicVideoImageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/mItemPartitionTopicCoverView"
        app:layout_constraintStart_toStartOf="@+id/mItemPartitionTopicCoverView"
        app:srcCompat="@drawable/icon_topic_video" />

    <TextView
        android:id="@+id/mItemPartitionTopicSizeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:lineSpacingExtra="-1sp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/mItemPartitionTopicVideoImageView"
        app:layout_constraintStart_toEndOf="@+id/mItemPartitionTopicVideoImageView"
        app:layout_constraintTop_toTopOf="@+id/mItemPartitionTopicVideoImageView"
        tools:text="5" />

    <TextView
        android:id="@+id/mItemPartitionTopicContentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:gravity="start"
        android:lineSpacingExtra="4sp"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/mItemPartitionTopicCoverView"
        app:layout_constraintStart_toStartOf="@+id/mItemPartitionTopicCoverView"
        app:layout_constraintTop_toBottomOf="@+id/mItemPartitionTopicCoverView"
        tools:text="仙女超级大眼术直" />


</android.support.constraint.ConstraintLayout>