<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--android:background="@drawable/bg_explore_chain_user"-->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/chain_user_rank_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:src="@drawable/explore_ic_gold" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/chain_user_avatar"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18.5dp"
            android:src="@mipmap/ic_launcher"
            app:failureImage="@drawable/avatar_default"
            app:placeholderImage="@drawable/avatar_default"
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/color_ffef30"
            app:roundingBorderWidth="1.5dp" />

        <com.shuashuakan.android.modules.widget.FollowTextView
            android:id="@+id/chain_user_follow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/shape_round_follow_bg"
            android:focusable="true"
            android:gravity="center"
            app:needDrawAddOperator="true"
            app:overCircle="true" />
    </FrameLayout>


    <TextView
        android:id="@+id/chain_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/chain_user_up_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_normal_b6b6b6"
        android:textSize="10sp" />

</LinearLayout>