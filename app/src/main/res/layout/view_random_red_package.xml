<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center">

  <ProgressBar
    android:id="@+id/star"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_centerHorizontal="true"
    android:indeterminateBehavior="repeat"
    android:indeterminateDrawable="@drawable/random_red_package"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/coin"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:src="@drawable/ic_coin_50_video"
    app:layout_constraintBottom_toBottomOf="@+id/star"
    app:layout_constraintEnd_toEndOf="@id/star"
    app:layout_constraintStart_toStartOf="@id/star"
    app:layout_constraintTop_toTopOf="@+id/star" />

  <LinearLayout
    android:id="@+id/coin_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/coin">

    <TextView
      android:id="@+id/coin_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/random_red_package_hint"
      android:gravity="center"
      android:lineSpacingExtra="4sp"
      android:paddingLeft="16dp"
      android:paddingTop="6dp"
      android:paddingRight="16dp"
      android:paddingBottom="6dp"
      android:text="@string/string_shua_pakage_red"
      android:textColor="@color/white"
      android:textSize="15sp" />
  </LinearLayout>


</android.support.constraint.ConstraintLayout>