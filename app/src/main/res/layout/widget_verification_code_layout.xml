<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_login_verification_code"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_login_input_edit"
            android:gravity="center_vertical"
            android:ems="6"
            android:hint="@string/string_input_verification_code"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_30"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:enabled="false"
            android:id="@+id/tv_login_get_valid_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="2sp"
            android:text="@string/string_get_code_label"
            android:textColor="@color/selector_valid_code_get_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/et_login_verification_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/login_phone_spit_line"
            app:layout_constraintTop_toTopOf="@+id/et_login_verification_code"
            tools:text="25s" />


        <View
            android:id="@+id/login_phone_spit_line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="95dp"
            android:layout_marginTop="4dp"
            android:background="@color/white_12"
            app:layout_constraintBottom_toBottomOf="@+id/et_login_verification_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_login_verification_code" />


    </android.support.constraint.ConstraintLayout>
</RelativeLayout>