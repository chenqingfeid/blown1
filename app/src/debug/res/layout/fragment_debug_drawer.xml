<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="16dp">

    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"
      android:text="刷刷看神秘基地"
      android:textColor="@android:color/black"
      android:textSize="36sp"
      android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"
      android:text="Android Developer Setting"
      android:textColor="@android:color/black"
      android:textSize="16sp"
      android:textStyle="italic" />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1.5dp"
    android:background="#e6e6e6" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:text="切换环境：不能使用微信登陆与微信分享"
    android:visibility="visible" />

  <RadioGroup
    android:id="@+id/environment_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:visibility="visible">

    <android.support.v7.widget.AppCompatRadioButton
      android:id="@+id/release_rb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="正式环境" />

    <android.support.v7.widget.AppCompatRadioButton
      android:id="@+id/debug_rb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="50dp"
      android:text="测试环境" />
  </RadioGroup>

  <Button
    android:id="@+id/jsSdkButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="js sdk"
    android:visibility="gone" />

  <Button
    android:id="@+id/accountButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="注销当前用户"
    android:visibility="visible" />

  <Button
    android:id="@+id/postButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="post"
    android:visibility="gone" />

  <Button
    android:id="@+id/pushIdButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="获取jPush唯一标识" />

  <Button
    android:id="@+id/smIdButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="获取数美Id" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
      android:id="@+id/applinkEditView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="3.5"
      android:hint="ssr://home" />

    <Button
      android:id="@+id/applinkButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="3.0"
      android:text="go" />
  </LinearLayout>


</LinearLayout>
